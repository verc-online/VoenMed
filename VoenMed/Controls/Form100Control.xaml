<UserControl x:Class="VoenMed.Controls.Form100Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VoenMed.Controls"
             mc:Ignorable="d" FontSize="17"
             d:DesignHeight="920" d:DesignWidth="1600">
    <Grid>

        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="auto" />
        </Grid.ColumnDefinitions>

        <!-- Col 0 Личные данные бойца -->
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
            <StackPanel Orientation="Vertical"
                        Grid.Column="0" Margin="10">

                <!-- Кем и когда выдано -->
                <Border Padding="5" Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center"
                                   FontWeight="Bold"
                                   Padding="0 0 0 10">
                            Паспортная часть
                        </TextBlock>

                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">
                            <TextBlock Margin="0 0 10 0">Время</TextBlock>
                            <TextBox Width="250" x:Name="issuedWhenTextBox"></TextBox>
                        </StackPanel>

                        <!-- ФИО бойца -->
                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">

                            <!-- Фамилия -->
                            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                                <TextBlock>Фамилия</TextBlock>
                                <TextBox Width="100" x:Name="personLastNameTextbox"></TextBox>
                            </StackPanel>

                            <!-- Имя -->
                            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                                <TextBlock>Имя</TextBlock>
                                <TextBox Width="100" x:Name="personFirstNameTextbox"></TextBox>
                            </StackPanel>

                            <!-- Отчество -->
                            <StackPanel Orientation="Vertical">
                                <TextBlock>Отчество</TextBlock>
                                <TextBox Width="100" x:Name="personSecondNameTextbox"></TextBox>
                            </StackPanel>
                        </StackPanel>

                        <!-- Дата рождения-->
                        <StackPanel Orientation="Horizontal">

                            <StackPanel Margin="0 0 20 10" Orientation="Vertical">
                                <TextBlock Margin="0 0 10 0">Дата рождения</TextBlock>
                                <DatePicker Name="dp1" IsDropDownOpen="False" SelectedDateFormat="Short">
                                </DatePicker>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock>Личный номер</TextBlock>
                                <TextBox Width="150" Padding="2"></TextBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">
                            <TextBlock Margin="0 0 10 0">Войсковая часть</TextBlock>
                            <TextBox Width="200"></TextBox>
                        </StackPanel>
                        <!-- Звание и должность бойца -->
                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">

                            <!-- Звание -->
                            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                                <TextBlock Margin="0 0 10 0">Звание</TextBlock>
                                <ComboBox Width="150" x:Name="ranksDropdown" />
                            </StackPanel>

                            <!-- Должность -->
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="0 0 10 0">Должность</TextBlock>
                                <TextBox Width="150" Padding="2"></TextBox>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>

                </Border>

                <!-- Амбулаторное обращение или санитарные потери -->
                <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Причина обращения</TextBlock>
                        <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                            <!-- TODO: Rename GroupName-->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton GroupName="Reason" Content="Огн." IsChecked="True" Margin="0 0 2 0" />
                                <RadioButton GroupName="Reason" Content="Др. пор." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" Content="Обморож." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" Content="Ядер." Margin="0 0 10 0" />

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton GroupName="Reason" Content="Хим." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" Content="Бакт." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" Content="Инф." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" Content="Б." Margin="0 0 10 0" />
                                <CheckBox> Без п.п.</CheckBox>
                            </StackPanel>
                        </StackPanel>
                        <!-- Время ранения -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <TextBlock Margin="0 0 10 0">Время ранения/травмы</TextBlock>
                            <TextBox Width="150" x:Name="diseaseTimeTextbox"></TextBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Очередность и направление эвакуации -->
                <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="10 0">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <!-- Куда эвакуировать -->
                        <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Куда эвакуировать</TextBlock>
                            <StackPanel Orientation="Vertical">
                                <RadioButton x:Name="evacWayRadioButton_1" GroupName="EvacuationWay" Content="Медрота"
                                             IsChecked="True" Margin="0 0 10 0" />
                                <RadioButton x:Name="evacWayRadioButton_2" GroupName="EvacuationWay" Content="Медбат"
                                             Margin="0 0 10 0" />
                                <RadioButton x:Name="evacWayRadioButton_3" GroupName="EvacuationWay" Content="ЦВМО" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Очередность-->
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Очередность</TextBlock>
                            <StackPanel Orientation="Vertical">
                                <RadioButton GroupName="Order" Content="I" IsChecked="True" Margin="0 0 10 0" />
                                <RadioButton GroupName="Order" Content="II" Margin="0 0 10 0" />
                                <RadioButton GroupName="Order" Content="III" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Транспорт и Положение -->
                <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <!-- Транспорт -->

                        <StackPanel Orientation="Vertical">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Транспорт</TextBlock>
                            <!-- TODO: Переименовать контент-->
                            <RadioButton x:Name="evacTransportRadioButton_1" GroupName="Transport" Content="Автомобиль"
                                         IsChecked="True" Margin="0 0 10 0" />
                            <RadioButton x:Name="evacTransportRadioButton_2" GroupName="Transport"
                                         Content="Мед транспорт" Margin="0 0 10 0" />
                            <RadioButton x:Name="evacTransportRadioButton_3" GroupName="Transport" Content="Вертолет"
                                         Margin="0 0 10 0" />
                            <RadioButton x:Name="evacTransportRadioButton_4" GroupName="Transport" Content="Самолет"
                                         Margin="0 0 10 0" />
                            <RadioButton x:Name="evacTransportRadioButton_5" GroupName="Transport"
                                         Content="Корабельное" />
                        </StackPanel>

                        <!-- Положение -->

                        <StackPanel Orientation="Vertical">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Положение</TextBlock>
                            <!-- TODO: Переименовать контент-->
                            <RadioButton GroupName="Position" Content="Лежа" IsChecked="True" Margin="0 0 10 0" />
                            <RadioButton GroupName="Position" Content="Сидя" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- Нуждается -->
                <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="5">
                    <StackPanel x:Name="stackPanel" Margin="0 0 0 10">
                        <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Особые отметки</TextBlock>
                        <CheckBox x:Name="checkBox1" IsThreeState="False" IsChecked="True" Height="20"
                                  Content="Угрожающее жизни состояние" />
                        <CheckBox x:Name="checkBox2" IsThreeState="False" IsChecked="False" Height="20"
                                  Content="Изоляция" />
                        <CheckBox x:Name="checkBox3" IsThreeState="False" IsChecked="False" Height="20"
                                  Content="Радиационное поражение" />
                        <CheckBox x:Name="checkBox4" IsThreeState="False" IsChecked="False" Height="20"
                                  Content="Санитарная обработка" />
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                </StackPanel>


                <!-- Куда и когда направлен  -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0 0 20 0">
                        <TextBlock FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap">Куда направлен</TextBlock>
                        <TextBox x:Name="evacAddressTextBox"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap">
                            Когда
                        </TextBlock>
                        <TextBox Width="150" x:Name="evacTimeTextbox"></TextBox>
                    </StackPanel>
                </StackPanel>

                <!-- Врач -->
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <TextBlock Margin="0 0 10 0" FontWeight="Bold">Врач</TextBlock>
                    <TextBox Width="250" x:Name="docTextBox"></TextBox>
                </StackPanel>


            </StackPanel>
        </Border>

        <!-- Col 1 Описание поражения -->

        <StackPanel Grid.Column="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Grid.Column="1">
                <!-- Локализация, жалобы -->
                <StackPanel x:Name="injuryLocalisationPanel" Margin="0 0 0 0">
                    <TextBlock HorizontalAlignment="Center"
                               FontWeight="Bold"
                               Margin="10"
                               TextWrapping="Wrap"
                               Grid.Column="1">
                        Локализация повреждений
                    </TextBlock>


                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!-- Спереди -->
                        <!-- Голова -->
                        <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="frontHeadInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center" Checked="frontHeadInjury_Checked"
                                          Unchecked="frontHeadInjury_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <CheckBox x:Name="frontNeckInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\1.jpg"
                                                Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                        </StackPanel>

                        <!-- Грудная клетка -->
                        <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Правое плечо -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="frontRightShoulderTourniquiet" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center" BorderBrush="Red"
                                          Checked="frontRightShoulderTourniquiet_Checked"
                                          Unchecked="frontRightShoulderTourniquiet_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <CheckBox x:Name="frontRightShoulderInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"

                                          Checked="frontRightShoulderInjury_Checked"
                                          Unchecked="frontRightShoulderInjury_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>

                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\3.jpg"
                                                Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                            <!-- Грудная клетка -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox x:Name="frontThoracInjuryRight" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <CheckBox x:Name="frontThoracInjuryLeft" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                </StackPanel>

                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\4.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                            <!-- Левое плечо -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="frontLeftShoulderTourniquiet" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Checked="frontLeftShoulderInjury_Checked"
                                          Unchecked="frontLeftShoulderInjury_Unchecked" BorderBrush="Red">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <CheckBox x:Name="frontLeftShoulderInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Checked="frontLeftShoulderInjury_Checked"
                                          Unchecked="frontLeftShoulderInjury_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\5.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                        </StackPanel>

                        <!-- Правое, левое предпл. и живот -->
                        <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Правое препдлечье -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="fronRightForearmTourniquiet" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Checked="fronRightForearmInjury_Checked"
                                          Unchecked="fronRightForearmInjury_Unchecked" BorderBrush="Red">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <CheckBox x:Name="fronRightForearmInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Checked="fronRightForearmInjury_Checked"
                                          Unchecked="fronRightForearmInjury_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\6.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                            <!-- Живот клетка -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox x:Name="frontBellyInjuryRight" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                        </CheckBox.LayoutTransform>

                                    </CheckBox>
                                    <CheckBox x:Name="frontBellyInjuryLeft" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                        </CheckBox.LayoutTransform>

                                    </CheckBox>
                                </StackPanel>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\7.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                            <!-- Левое предплечье -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="fronLeftForearmTourniquiet" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center" RenderTransformOrigin="1.5,1.5"
                                          BorderBrush="Red">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <CheckBox x:Name="fronLeftForearmInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center" RenderTransformOrigin="1.5,1.5"
                                          Checked="fronLeftForearmInjury_Checked"
                                          Unchecked="fronLeftForearmInjury_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\8.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                        </StackPanel>

                        <!-- Кисти. и бедра таз -->
                        <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                            <!-- Правая кисть -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="fronRightWristInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center" Checked="fronRightWristInjury_Checked"
                                          Unchecked="fronRightWristInjury_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="3" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\9.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                            <!-- Левое и правое бедро -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center" Orientation="Horizontal">
                                <!-- Правое бедро -->
                                <StackPanel Orientation="Vertical">
                                    <CheckBox x:Name="frontRightHipTourniquiet" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center" BorderBrush="Red">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <CheckBox x:Name="frontRightHipInjury" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                </StackPanel>
                                <!-- Левре бедро -->

                                <StackPanel Orientation="Vertical">
                                    <CheckBox x:Name="frontLeftHipTourniquiet" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center" BorderBrush="Red">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <CheckBox x:Name="frontLeftHipInjury" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>

                                    </CheckBox>
                                </StackPanel>

                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\10.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                            <!-- Левая кисть -->
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="fronLeftWristInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center"
                                          Checked="fronLeftWristInjury_Checked"
                                          Unchecked="fronLeftWristInjury_Unchecked">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="3" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\11.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                        </StackPanel>

                        <!-- Левая и правая голень -->
                        <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center" Orientation="Horizontal">
                                <StackPanel Orientation="Vertical">
                                    <CheckBox x:Name="frontRightShinTourniquiet" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center" BorderBrush="Red">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <CheckBox x:Name="frontRightShinInjury" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                </StackPanel>
                                <StackPanel Orientation="Vertical">
                                    <CheckBox x:Name="frontLeftShinTourniquiet" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center" BorderBrush="Red">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>
                                    </CheckBox>
                                    <CheckBox x:Name="frontLeftShinInjury" Background="Transparent"
                                              VerticalAlignment="Center"
                                              HorizontalAlignment="Center">
                                        <CheckBox.LayoutTransform>
                                            <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                        </CheckBox.LayoutTransform>

                                    </CheckBox>
                                </StackPanel>

                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\13.jpg"
                                                Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                        </StackPanel>

                        <!-- Левая и правая стопы -->
                        <StackPanel Grid.Column="0" Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center" Orientation="Horizontal">
                                <CheckBox x:Name="frontRightFootInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                    </CheckBox.LayoutTransform>
                                </CheckBox>
                                <CheckBox x:Name="frontLeftFootInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <StackPanel.Background>
                                    <ImageBrush ImageSource="..\Images\FrontImages\16.jpg" Stretch="UniformToFill" />
                                </StackPanel.Background>
                            </StackPanel>
                        </StackPanel>

                        <!-- Сзади -->
                        <!-- TODO: Поменять местами право и лево (он же повернут спиной)-->
                        <!-- Голова -->
                        <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                            <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                <CheckBox x:Name="backHeadInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                    <CheckBox.LayoutTransform>
                                        <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                    </CheckBox.LayoutTransform>

                                </CheckBox>
                                <CheckBox x:Name="backNeckInjury" Background="Transparent"
                                          VerticalAlignment="Center"
                                          HorizontalAlignment="Center">
                                    <CheckBox.LayoutTransform>
