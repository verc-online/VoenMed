<UserControl x:Class="VoenMed.Controls.Form100Control"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:VoenMed.Controls"
             mc:Ignorable="d" FontSize="17"
             d:DesignHeight="920" d:DesignWidth="1400">
    <Grid>

        <Grid.RowDefinitions>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Col 0 Личные данные бойца -->
        <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
            <StackPanel Orientation="Vertical"
                        Grid.Column="0" Margin="10">

                <!-- Кем и когда выдано -->
                <Border Padding="5" Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock HorizontalAlignment="Center"
                                   FontWeight="Bold"
                                   Padding="0 0 0 10">
                            Паспортная часть
                        </TextBlock>

                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">
                            <TextBlock Margin="0 0 10 0">Время</TextBlock>
                            <TextBox Width="250" x:Name="issuedWhenTextBox" TextChanged="issuedWhenTextBox_TextChanged"></TextBox>
                        </StackPanel>

                        <!-- ФИО бойца -->
                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">

                            <!-- Фамилия -->
                            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                                <TextBlock>Фамилия</TextBlock>
                                <TextBox Width="100" x:Name="personLastNameTextbox" TextChanged="personLastNameTextbox_TextChanged"></TextBox>
                            </StackPanel>

                            <!-- Имя -->
                            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                                <TextBlock>Имя</TextBlock>
                                <TextBox Width="100" x:Name="personFirstNameTextbox" TextChanged="personFirstNameTextbox_TextChanged"></TextBox>
                            </StackPanel>

                            <!-- Отчество -->
                            <StackPanel Orientation="Vertical">
                                <TextBlock>Отчество</TextBlock>
                                <TextBox Width="100" x:Name="personSecondNameTextbox" TextChanged="personSecondNameTextbox_TextChanged"></TextBox>
                            </StackPanel>
                        </StackPanel>

                        <!-- Дата рождения-->
                        <StackPanel Orientation="Horizontal">

                            <StackPanel Margin="0 0 20 10" Orientation="Vertical">
                                <TextBlock Margin="0 0 10 0">Дата рождения</TextBlock>
                                <DatePicker IsDropDownOpen="False" SelectedDateFormat="Short" x:Name="birthDateDatePicker" SelectedDateChanged="birthDateDatePicker_SelectedDateChanged">
                                </DatePicker>
                            </StackPanel>
                            <StackPanel Orientation="Vertical">
                                <TextBlock>Личный номер</TextBlock>
                                <TextBox Width="150" Padding="2" x:Name="militaryIdTextBox" TextChanged="militaryIdTextBox_TextChanged"></TextBox>
                            </StackPanel>
                        </StackPanel>
                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">
                            <TextBlock Margin="0 0 10 0">Войсковая часть</TextBlock>
                            <TextBox Width="200" x:Name="militaryUnitTextBox" TextChanged="militaryUnitTextBox_TextChanged"></TextBox>
                        </StackPanel>
                        <!-- Звание и должность бойца -->
                        <StackPanel Margin="0 0 0 10"
                                    Orientation="Horizontal">

                            <!-- Звание -->
                            <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                                <TextBlock Margin="0 0 10 0">Звание</TextBlock>
                                <ComboBox Width="150" x:Name="ranksDropdown" SelectionChanged="ranksDropdown_SelectionChanged"/>
                            </StackPanel>

                            <!-- Должность -->
                            <StackPanel Orientation="Vertical">
                                <TextBlock Margin="0 0 10 0">Должность</TextBlock>
                                <TextBox Width="150" Padding="2" x:Name="dutyTextBox" TextChanged="dutyTextBox_TextChanged"></TextBox>
                            </StackPanel>
                        </StackPanel>

                    </StackPanel>

                </Border>

                <!-- Амбулаторное обращение или санитарные потери -->
                <Border Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Причина обращения</TextBlock>
                        <StackPanel Orientation="Vertical" Margin="0 0 0 10">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton GroupName="Reason" x:Name="BattleGunshotRadioButton" Click="BattleGunshotRadioButton_Click" Content="Огн." IsChecked="True" Margin="0 0 2 0" />
                                <RadioButton GroupName="Reason" x:Name="OtherRadioButton" Click="OtherRadioButton_Click"  Content="Др. пор." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" x:Name="FrostbiteRadioButton" Click="FrostbiteRadioButton_Click" Content="Обморож." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" x:Name="NucleoRadioButton" Click="NucleoRadioButton_Click" Content="Ядер." Margin="0 0 10 0" />

                            </StackPanel>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton GroupName="Reason" x:Name="ChemistryRadioButton" Click="ChemistryRadioButton_Click" Content="Хим." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" x:Name="BacterialRadioButton" Click="BacterialRadioButton_Click" Content="Бакт." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" x:Name="InfectionRadioButton" Click="InfectionRadioButton_Click" Content="Инф." Margin="0 0 10 0" />
                                <RadioButton GroupName="Reason" x:Name="BodyRadioButton" Click="BodyRadioButton_Click" Content="Б." Margin="0 0 10 0" />
                                <CheckBox x:Name="WithoutFirstAidCheckbox" Checked="WithoutFirstAidCheckbox_Checked" Unchecked="WithoutFirstAidCheckbox_Unchecked">Без п.п.</CheckBox>
                            </StackPanel>
                        </StackPanel>
                        <!-- Время ранения -->
                        <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                            <TextBlock Margin="0 0 10 0">Время ранения/травмы</TextBlock>
                            <TextBox Width="150" x:Name="diseaseTimeTextbox" TextChanged="diseaseTimeTextbox_TextChanged"></TextBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Очередность и направление эвакуации -->
                <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="10 0">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 10">
                        <!-- Куда эвакуировать -->
                        <StackPanel Orientation="Vertical" Margin="0 0 10 0">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Куда эвакуировать</TextBlock>
                            <StackPanel Orientation="Vertical">
                                <RadioButton x:Name="evacWayRadioButton_1" Click="evacWayRadioButton_1_Click" GroupName="EvacuationWay" Content="Медрота"
                                             Margin="0 0 10 0" />
                                <RadioButton x:Name="evacWayRadioButton_2" Click="evacWayRadioButton_2_Click" GroupName="EvacuationWay" Content="Медбат"
                                             Margin="0 0 10 0" />
                                <RadioButton x:Name="evacWayRadioButton_3" Click="evacWayRadioButton_3_Click" GroupName="EvacuationWay" Content="ЦВМО" IsChecked="True" />
                            </StackPanel>
                        </StackPanel>
                        <!-- Очередность-->
                        <StackPanel Orientation="Vertical">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Очередность</TextBlock>
                            <StackPanel Orientation="Vertical">
                                <RadioButton GroupName="Order" x:Name="FirstOrderRadioButton" Click="FirstOrderRadioButton_Click" Content="I" IsChecked="True" Margin="0 0 10 0" />
                                <RadioButton GroupName="Order" x:Name="SecondOrderRadioButton" Click="SecondOrderRadioButton_Click" Content="II" Margin="0 0 10 0" />
                                <RadioButton GroupName="Order" x:Name="ThirdOrderRadioButton" Click="ThirdOrderRadioButton_Click" Content="III" />
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Транспорт и Положение -->
                <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="5">
                    <StackPanel Orientation="Horizontal">
                        <!-- Транспорт -->

                        <StackPanel Orientation="Vertical">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Транспорт</TextBlock>
                            <!-- TODO: Переименовать контент-->
                            <RadioButton x:Name="evacTransportRadioButton_1" Click="evacTransportRadioButton_1_Click" GroupName="Transport" Content="Автомобиль"
                                         Margin="0 0 10 0" />
                            <RadioButton x:Name="evacTransportRadioButton_2" Click="evacTransportRadioButton_2_Click" GroupName="Transport"
                                         Content="Сан. транспорт" Margin="0 0 10 0"  IsChecked="True"/>
                            <RadioButton x:Name="evacTransportRadioButton_3" Click="evacTransportRadioButton_3_Click" GroupName="Transport" Content="Вертолет"
                                         Margin="0 0 10 0" />
                            <RadioButton x:Name="evacTransportRadioButton_4" Click="evacTransportRadioButton_4_Click" GroupName="Transport" Content="Самолет"
                                         Margin="0 0 10 0" />
                            <RadioButton x:Name="evacTransportRadioButton_5" Click="evacTransportRadioButton_5_Click" GroupName="Transport"
                                         Content="Корабль" />
                        </StackPanel>

                        <!-- Положение -->

                        <StackPanel Orientation="Vertical">
                            <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Положение</TextBlock>
                            <!-- TODO: Переименовать контент-->
                            <RadioButton GroupName="Position" x:Name="layingPositionRadioButton" Click="layingPositionRadioButton_Click" Content="Лежа" IsChecked="True" Margin="0 0 10 0" />
                            <RadioButton GroupName="Position" x:Name="sittingPositionRadioButton" Click="sittingPositionRadioButton_Click" Content="Сидя" />
                        </StackPanel>
                    </StackPanel>
                </Border>
                <!-- Нуждается -->
                <Border BorderBrush="Gainsboro" BorderThickness="1" Padding="5">
                    <StackPanel x:Name="stackPanel" Margin="0 0 0 10">
                        <TextBlock FontWeight="Bold" HorizontalAlignment="Center">Особые отметки</TextBlock>
                        <CheckBox x:Name="LifeThreateningConditionCheckBox" Checked="LifeThreateningConditionCheckBox_Checked" Unchecked="LifeThreateningConditionCheckBox_Unchecked" IsThreeState="False" IsChecked="True" Height="20"
                                  Content="Угрожающее жизни состояние" />
                        <CheckBox x:Name="IsolationCheckBox" IsThreeState="False" Checked="IsolationCheckBox_Checked" Unchecked="IsolationCheckBox_Unchecked" IsChecked="False" Height="20"
                                  Content="Изоляция" />
                        <CheckBox x:Name="RadiationDamageCheckBox" IsThreeState="False" Checked="RadiationDamageCheckBox_Checked" Unchecked="RadiationDamageCheckBox_Unchecked" IsChecked="False" Height="20"
                                  Content="Радиационное поражение" />
                        <CheckBox x:Name="SanitaryTreatmentCheckBox" IsThreeState="False" Checked="SanitaryTreatmentCheckBox_Checked" Unchecked="SanitaryTreatmentCheckBox_Unchecked" IsChecked="False" Height="20"
                                  Content="Санитарная обработка" />
                    </StackPanel>
                </Border>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                </StackPanel>


                <!-- Куда и когда направлен  -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <StackPanel Orientation="Vertical" Margin="0 0 20 0">
                        <TextBlock FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap">Куда направлен</TextBlock>
                        <TextBox x:Name="evacAddressTextBox" TextChanged="evacAddressTextBox_TextChanged"></TextBox>
                    </StackPanel>
                    <StackPanel Orientation="Vertical">
                        <TextBlock FontWeight="Bold"
                                   TextAlignment="Center"
                                   TextWrapping="Wrap">
                            Когда
                        </TextBlock>
                        <TextBox Width="150" x:Name="evacTimeTextbox" TextChanged="evacTimeTextbox_TextChanged"></TextBox>
                    </StackPanel>
                </StackPanel>

                <!-- Врач -->
                <StackPanel Orientation="Horizontal" Margin="0 10 0 0">
                    <TextBlock Margin="0 0 10 0" FontWeight="Bold">Врач</TextBlock>
                    <TextBox Width="250" x:Name="docTextBox" TextChanged="docTextBox_TextChanged"></TextBox>
                </StackPanel>


            </StackPanel>
        </Border>

        <!-- Col 1 Описание поражения -->
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <Grid Margin="0 5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition Width="*" />

                </Grid.ColumnDefinitions>
                <Button x:Name="damageStackPanelButton" Grid.Column="1" Padding="5" Click="damageStackPanelButton_Click">Повреждения</Button>
                <Button x:Name="conditionStackPanelButton" Grid.Column="3" Padding="5" Click="conditionStackPanelButton_Click">Состояние</Button>
                <Button x:Name="helpProvidedPanelButton" Grid.Column="5" Padding="5" Click="helpProvidedPanelButton_Click">Оказанная помощь</Button>
            </Grid>
            <!-- Локализация, жалобы -->
            <StackPanel x:Name="damageStackPanel" Orientation="Horizontal" Visibility="Collapsed">

                <StackPanel x:Name="injuryLocalisationPanel" Margin="10 0 0 0">
                    <StackPanel Orientation="Horizontal">

                        <StackPanel Orientation="Vertical">
                            <TextBlock HorizontalAlignment="Center" FontWeight="Bold">
                                Локализация повреждений
                            </TextBlock>
                            <StackPanel Orientation="Horizontal">
                                <StackPanel Orientation="Vertical" Margin="50 0 50 0">
                                    <!-- Спереди -->
                                    <!-- Голова -->
                                    <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <CheckBox x:Name="frontHeadInjury" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" Checked="frontHeadInjury_Checked"
                                                      Unchecked="frontHeadInjury_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <CheckBox x:Name="frontNeckInjury" Background="Transparent"
                                                      Checked="frontNeckInjury_Checked"
                                                      Unchecked="frontNeckInjury_Unchecked"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\1.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Грудная клетка -->
                                    <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <!-- Правое плечо -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <CheckBox x:Name="frontRightShoulderTourniquiet" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" BorderBrush="Red"
                                                      Checked="frontRightShoulderTourniquiet_Checked"
                                                      Unchecked="frontRightShoulderTourniquiet_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <CheckBox x:Name="frontRightShoulderInjury" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"

                                                      Checked="frontRightShoulderInjury_Checked"
                                                      Unchecked="frontRightShoulderInjury_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>

                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\3.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                        <!-- Грудная клетка -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox x:Name="frontThoracInjuryRight" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Checked="frontThoracInjuryRight_Checked"
                                                          Unchecked="frontThoracInjuryRight_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>
                                                <CheckBox x:Name="frontThoracInjuryLeft" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Checked="frontThoracInjuryLeft_Checked"
                                                          Unchecked="frontThoracInjuryLeft_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="3" />
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>
                                            </StackPanel>

                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\4.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                        <!-- Левое плечо -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <CheckBox x:Name="frontLeftShoulderTourniquiet" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      Checked="frontLeftShoulderTourniquiet_Checked"
                                                      Unchecked="frontLeftShoulderTourniquiet_Unchecked"
                                                      BorderBrush="Red">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <CheckBox x:Name="frontLeftShoulderInjury" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      Checked="frontLeftShoulderInjury_Checked"
                                                      Unchecked="frontLeftShoulderInjury_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\5.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Правое, левое предпл. и живот -->
                                    <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <!-- Правое препдлечье -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <CheckBox x:Name="fronRightForearmTourniquiet" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      Checked="frontRightForearmTourniquiet_Checked"
                                                      Unchecked="frontRightForearmTourniquiet_Unchecked"
                                                      BorderBrush="Red">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <CheckBox x:Name="fronRightForearmInjury" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      Checked="frontRightForearmInjury_Checked"
                                                      Unchecked="frontRightForearmInjury_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\6.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                        <!-- Живот клетка -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <CheckBox x:Name="frontBellyInjuryRight" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Checked="frontBellyInjuryRight_Checked"
                                                          Unchecked="frontBellyInjuryRight_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="2" />
                                                    </CheckBox.LayoutTransform>

                                                </CheckBox>
                                                <CheckBox x:Name="frontBellyInjuryLeft" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Checked="frontBellyInjuryLeft_Checked"
                                                          Unchecked="frontBellyInjuryLeft_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="2" />
                                                    </CheckBox.LayoutTransform>

                                                </CheckBox>
                                            </StackPanel>
                                            <!-- Таз -->
                                            <StackPanel Margin="0 2">
                                                <CheckBox x:Name="pelvisFrontCheckBox"
                                                          Checked="pelvisFrontCheckBox_Checked"
                                                          Unchecked="pelvisFrontCheckBox_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="3" ScaleY="1" />
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>
                                            </StackPanel>
                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\7.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                        <!-- Левое предплечье -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <CheckBox x:Name="fronLeftForearmTourniquiet" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" RenderTransformOrigin="1.5,1.5"
                                                      BorderBrush="Red"
                                                      Checked="frontLeftForearmTourniquiet_Checked"
                                                      Unchecked="frontLeftForearmTourniquiet_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <CheckBox x:Name="fronLeftForearmInjury" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center" RenderTransformOrigin="1.5,1.5"
                                                      Checked="frontLeftForearmInjury_Checked"
                                                      Unchecked="fronLeftForearmInjury_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="1.5" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\8.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Кисти. и бедра таз -->
                                    <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal"
                                                HorizontalAlignment="Center">
                                        <!-- Правая кисть -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center">
                                            <CheckBox x:Name="fronRightWristInjury" Background="Transparent"
                                                      VerticalAlignment="Center"
                                                      HorizontalAlignment="Center"
                                                      Checked="frontRightWristInjury_Checked"
                                                      Unchecked="frontRightWristInjury_Unchecked">
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="3" ScaleY="3" />
                                                </CheckBox.LayoutTransform>

                                            </CheckBox>
                                            <StackPanel.Background>
                                                <ImageBrush ImageSource="..\Images\FrontImages\9.jpg"
                                                            Stretch="UniformToFill" />
                                            </StackPanel.Background>
                                        </StackPanel>
                                        <!-- Левое и правое бедро -->
                                        <StackPanel Width="50" Height="50" VerticalAlignment="Center"
                                                    Orientation="Horizontal">
                                            <!-- Правое бедро -->
                                            <StackPanel Orientation="Vertical">
                                                <CheckBox x:Name="frontRightHipTourniquiet" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          BorderBrush="Red"
                                                          Checked="frontRightHipTourniquiet_Checked"
                                                          Unchecked="frontRightHipTourniquiet_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>
                                                <CheckBox x:Name="frontRightHipInjury" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Checked="frontRightHipInjury_Checked"
                                                          Unchecked="frontRightHipInjury_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>
                                            </StackPanel>

                                            <!-- Левое бедро -->
                                            <StackPanel Orientation="Vertical">
                                                <CheckBox x:Name="frontLeftHipTourniquiet" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          BorderBrush="Red"
                                                          Checked="frontLeftHipTourniquiet_Checked"
                                                          Unchecked="frontLeftHipTourniquiet_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                                    </CheckBox.LayoutTransform>
                                                </CheckBox>
                                                <CheckBox x:Name="frontLeftHipInjury" Background="Transparent"
                                                          VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"
                                                          Checked="frontLeftHipInjury_Checked"
                                                          Unchecked="frontLeftHipInjury_Unchecked">
                                                    <CheckBox.LayoutTransform>
                                                        <ScaleTransform ScaleX="1.5" ScaleY="1.5" />
                                                    </CheckBox.LayoutTransform>

                                                </CheckBox>
                                            </StackPanel>

